@model IEnumerable<BookCatalog.Models.Book>

<h2>Списък с книги</h2>
<a asp-action="Create" class="btn btn-primary">Добави книга</a>
<table class="table">
    <thead>
        <tr>
            <th>Заглавие</th>
            <th>Автор</th>
            <th>Жанр</th>
            <th>Снимка</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author.Name</td>
                <td>@book.Genre.Name</td>
                <td>
                    @if (book.Image != null)
                    {
                        <img src="data:image;base64,@(Convert.ToBase64String(book.Image))" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.BookId">Редактирай</a> |
                    <form asp-action="Delete" asp-route-id="@book.BookId" method="post">
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
